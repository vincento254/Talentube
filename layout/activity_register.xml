<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="128dp"
    tools:layout_editor_absoluteX="8dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/good_morning_img"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.814"
        tools:context=".activities.RegisterActivity"
        tools:layout_editor_absoluteX="0dp">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:paddingTop="5dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="113dp"
                android:layout_height="107dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/logo"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/apercu_bold"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="40sp"/>

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittextround"
            android:fontFamily="@font/apercu_light"
            android:hint="@string/name"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/design_default_color_surface"
            android:textSize="20sp"
            tools:ignore="Autofill,RtlSymmetry,TextFields,VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/edtEmail1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittextround"
            android:fontFamily="@font/apercu_light"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/design_default_color_surface"
            android:textSize="20sp"
            tools:ignore="Autofill,RtlSymmetry,VisualLin" />

        <EditText
            android:id="@+id/edtPassword1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittextround"
            android:fontFamily="@font/apercu_light"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/design_default_color_surface"
            android:textSize="20sp"
            tools:ignore="Autofill,RtlSymmetry,VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/edtConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittextround"
            android:fontFamily="@font/apercu_light"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/design_default_color_surface"
            android:textSize="20sp"
            tools:ignore="Autofill,RtlSymmetry,VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittextround"
            android:fontFamily="@font/apercu_light"
            android:hint="@string/phone"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/design_default_color_surface"
            android:textSize="20sp"
            tools:ignore="Autofill,RtlSymmetry,TextFields,VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/edtDob"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittextround"
            android:fontFamily="@font/apercu_light"
            android:hint="@string/date_of_birth_yyy_mm_dd"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/design_default_color_surface"
            android:textSize="20sp"
            tools:ignore="Autofill,RtlSymmetry,TextFields,VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittextround"
            android:fontFamily="@font/apercu_light"
            android:hint="@string/address"
            android:paddingStart="15dp"
            android:paddingBottom="50dp"
            android:textColor="@color/white"
            android:textColorHint="#BCAAA4"
            android:textSize="20sp"
            tools:ignore="Autofill,RtlSymmetry,TextFields,VisualLintTextFieldSize,TextContrastCheck" />

        <Button
            android:id="@+id/btnRegister1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/button_design"
            android:fontFamily="@font/apercu_regular"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/finishBg"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextContrastCheck,DuplicateSpeakableTextCheck,VisualLintButtonSize" />

        <TextView
            android:id="@+id/btnalready"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="@string/already_have_an_account"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck" />




    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>