<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activities.InfoActivity"
android:orientation="vertical">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        app:cardBackgroundColor="@color/backColor">

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="arrow"
            android:scaleType="center"
            android:src="@drawable/arrow"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
    </androidx.cardview.widget.CardView>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:fontFamily="@font/apercu_bold"
        android:textSize="30sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/info"
        tools:ignore="ImageContrastCheck" />
</LinearLayout>
<TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/what_is_talent_program"
    android:textSize="20sp"
    android:fontFamily="@font/apercu_regular"
    android:textColor="@color/bold"
    android:layout_marginTop="30dp"
    android:layout_marginStart="30dp"/>
<TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/talent_means_training_and_learning_environment_nurturing_talent"
    android:textSize="18sp"
    android:fontFamily="@font/apercu_regular"
    android:layout_marginTop="8dp"
    android:layout_marginStart="30dp"/>
<TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/vision"
    android:textSize="20sp"
    android:fontFamily="@font/apercu_regular"
    android:textColor="@color/bold"
    android:layout_marginTop="30dp"
    android:layout_marginStart="30dp"/>
<TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/nuturing_talented_people_for_tech_sector"
    android:textSize="18sp"
    android:fontFamily="@font/apercu_regular"
    android:layout_marginTop="8dp"
    android:layout_marginStart="30dp"/>
<TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/mission"
    android:textSize="20sp"
    android:fontFamily="@font/apercu_regular"
    android:textColor="@color/bold"
    android:layout_marginTop="30dp"
    android:layout_marginStart="30dp"/>
<TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/providing_good_environment_for_on_job_training_ojt_candidates_and_interns_to_get_hands_on_experience"
    android:textSize="18sp"
    android:fontFamily="@font/apercu_regular"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="30dp"/>
<TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/providing_mentorship_and_training_from_experts_and_mentors"
    android:textSize="18sp"
    android:layout_marginEnd="10dp"
    android:fontFamily="@font/apercu_regular"
    android:layout_marginTop="8dp"
    android:layout_marginStart="30dp"/>

<TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/training_to_maximize_his_her_own_abilities_and_creativity"
    android:textSize="18sp"
    android:layout_marginEnd="10dp"
    android:fontFamily="@font/apercu_regular"
    android:layout_marginTop="8dp"
    android:layout_marginStart="30dp"/>
<TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/sharing_knowledge_of_tech_projects_in_real_world"
    android:textSize="18sp"
    android:layout_marginEnd="8dp"
    android:fontFamily="@font/apercu_regular"
    android:layout_marginTop="10dp"
    android:layout_marginStart="30dp"/>
<TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/getting_familiar_with_working_ethic_and_professional_behavior"
    android:textSize="18sp"
    android:fontFamily="@font/apercu_regular"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="30dp"/>


</androidx.appcompat.widget.LinearLayoutCompat>